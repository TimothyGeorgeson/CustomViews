<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.example.consultants.customviews.customviews.CustomButton
        android:id="@+id/btnCustom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Click Me" />

    <Button
        android:text="Change Radius"
        android:onClick="onChangeRadius"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.example.consultants.customviews.customviews.CustomCircle
        android:id="@+id/customCircle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:fillColor="@color/colorAccent"
        app:radius="300" />

</LinearLayout>